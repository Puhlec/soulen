<div class ="container">
  <% if @student.avatar.attached?  %>
    <%= image_tag @student.avatar, style: "max-width: 100px" %>
  <% end %>
  <%= @student.name %>
  <%= @student.fullname %>
  <hr>
  <div class="container">
    <div class="row">
      <div class="col-3" style="min-width: 200px;">
        <nav class="nav flex-column">
          <%= render 'menu', student: @student%>
        </nav>
      </div>
      <div class="col-20">
        <%= render 'show', lesson: @lesson %>
      </div>
    </div>
  </div>
  <hr>
</div>
