<%= bootstrap_form_with url: login_path, local: true do |f| %>
  <%= f.text_field :name, skip_label: true, placeholder: "Логин", style: 'min-height: 100px' %>
  <%= f.password_field :password, skip_label: true, placeholder: "Пароль", style: 'min-height: 100px' %>
  <%= f.submit "Войти", class: "btn btn-outline-success", style: 'width: 100%; height: 100px;' %>
<% end %>
